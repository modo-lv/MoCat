@using MoCat.Core.Components.Auth
@model MoCat.Web.Infrastructure.IPageWithTitle

<!DOCTYPE html>
<html lang="en">
<head>
  <title>@(Model?.Title ?? "")</title>

  <!-- Libraries -->
  <script src="/libs/jquery-3.5.1.min.js" defer></script>

  <!-- Style -->
  <link rel="stylesheet" href="/main.css"/>

  <!-- Scripts -->
  <script src="/scripts/notice-board.js" defer></script>
  <script src="/main.js" defer></script>
</head>
<body>
<header>
  <h1>MoCAT</h1>
</header>
<partial name="_NoticeBoard"/>
<nav>
  <ul>
    @if (User.IsAuthenticated()) {
      <li>
        <a active-in asp-page="/Index">Home</a>
      </li>
      <li>
        <a active-in asp-page="/UserConfig">Settings</a>
      </li>
      <li>
        <a asp-page="/Auth/Logout">Logout</a>
      </li>
    }
    else {
      <li>
        <a active-in asp-page="/Auth/Login">Login</a>
      </li>
    }
  </ul>
</nav>
<main>
  @RenderBody()
</main>
</body>
</html>