@using MoCat.Core.Components.Auth
@model MoCat.Web.Infrastructure.IPageWithTitle

<!DOCTYPE html>
<html lang="en">
<head>
  <title>@(Model?.Title ?? "")</title>

  <!-- jQuery -->
  <script src="/libs/jquery-3.5.1.min.js" defer></script>
  
  <!-- ag-grid -->
  <script src="/libs/ag-grid/ag-grid-community.min.noStyle.js" defer></script>
  <link rel="stylesheet" href="/libs/ag-grid/ag-grid.css" />
  <link rel="stylesheet" href="/libs/ag-grid/ag-theme-alpine.css" />

  <!-- MoCat -->
  <link rel="stylesheet" href="/main.css"/>
  <script src="/scripts/notice-board.js" defer></script>
  <script src="/main.js" defer></script>
</head>
<body>
<header>
  <h1>MoCAT</h1>
</header>
<partial name="_NoticeBoard"/>
<nav>
  <ul>
    @if (User.IsAuthenticated()) {
      <li>
        <a active-in asp-page="/Index">Home</a>
      </li>
      <li>
        <a active-in asp-page="/Settings/Owners">Settings</a>
      </li>
      <li>
        <a asp-page="/Auth/Logout">Logout</a>
      </li>
    }
    else {
      <li>
        <a active-in asp-page="/Auth/Login">Login</a>
      </li>
    }
  </ul>
</nav>
<main>
  @RenderBody()
</main>
</body>
</html>